{
  "manifest_version": 3,
  "name": "AI-FlowScorer",
  "version": "2.0.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "click.serviceslab@ai-flow-scorer",
      "data_collection_permissions": {
        "required": ["none"],
        "collects_personal_data": false,
        "collects_location_data": false,
        "collects_health_data": false,
        "collects_financial_data": false,
        "collects_authentication_information": false,
        "collects_web_activity": false,
        "collects_communications": false,
        "collects_user_identifiers": false
      }
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://sableye.serviceslab.click/*"
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["ai-flow-scorer.js"],
      "run_at": "document_idle"
    }
  ]
}
